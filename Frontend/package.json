{
  "name": "swiftwasm-pad",
  "dependencies": {
    "@wasmer/wasi": "^0.12.0",
    "@wasmer/wasmfs": "^0.12.0",
    "codemirror": "^5.58.2",
    "javascript-kit-swift": "0.5.0",
    "path-browserify": "^1.0.1"
  },
  "devDependencies": {
    "@swiftwasm/swift-webpack-plugin": "1.0.7",
    "copy-webpack-plugin": "^5.1.2",
    "css-loader": "^4.3.0",
    "style-loader": "^1.2.1",
    "webpack": "^4.42.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3",
    "worker-loader": "^3.0.2"
  },
  "scripts": {
    "build": "./scripts/build-wasm.sh && webpack --config webpack.dev.js",
